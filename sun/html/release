<div id="buy-popup-message" class="buy-popup mfp-hide white-popup white-popup-block">
	<a class="popup-modal-dismiss" href="#"></a>
	<h5>Due to fulfillment challenges related to the novel coronavirus, print copies are temporarily unavailable for individual sale. We are offering free PDFs until we are able to resume print sales.</h5>
	<p>Enter your e-mail address below to download this issue.</p>
	<form method="post" id="download-single" action="https://www.thesunmagazine.org/issue/pdfFree/531.pdf">
		<label for="email"><span class="label-text">E-mail</span><span class="label-asterisk">*</span></label>
		<input class="buy-single-email" id="email" type="email" name="email">
		<button type="send" class="form-buy-issue-send b b-3 b-padding-tight b-loading">Send</button>
		<button class="form-buy-issue-download b b-3 b-padding-tight b-loading">Download pdf</button>
		<button type="send" class="popup-modal-dismiss b b-2 b-padding-tight b-loading">Close</button>
		<div class="g-recaptcha" style="text-align: center" data-sitekey="6LeShC4UAAAAABclGhyTmdyYKcWKkxsgjqVPZXBs"></div>

	</form>
</div>

			<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
			<script src="https://226391-691236-raikfcquaxqncofqfm.stackpathdns.com/theme/thesun/assets/build/js/plugins.js"></script>
			<script src="https://226391-691236-raikfcquaxqncofqfm.stackpathdns.com/theme/thesun/assets/build/js/site.js"></script>
			<script src="https://226391-691236-raikfcquaxqncofqfm.stackpathdns.com/theme/thesun/assets/build/js/newsletter.js"></script>
			<script src="https://226391-691236-raikfcquaxqncofqfm.stackpathdns.com/theme/thesun/assets/js/articles.js"></script>
		</div>
		</div>

				<script>
		(function (doc) {
			var scripts = doc.getElementsByTagName('script');
			var script = scripts[scripts.length - 1];
			var xhr = new XMLHttpRequest();
			xhr.onload = function () {
				var div = doc.createElement('div');
				div.innerHTML = this.responseText;
				div.style.display = 'none';
				script.parentNode.insertBefore(div, script);
			}
			xhr.open('get', '/theme/thesun//assets/build/img/sprite/sprite.svg', true);
			xhr.send();
		})(document);



		</script>

		<script>
			// Submit function
            function recaptcha_callback() {
						var getUrl = $('.form-newsletter').data( "url-send" ),
							getName = $('input#name').val(),
							getEmail = $('input#email').val();
						$.ajax({
								type: "POST",
								url: getUrl,
								data: {
									name: getName,
									email: getEmail,
									grecaptcharesponse: grecaptcha.getResponse()
								}
							}).done(function(response) {
								console.log(response);
									$('.form-fields').fadeOut(800, function () {
										$('.form-fields').empty().append('<div class="newsletter-confirm-message">Thank you for signing up to receive news from <em>The Sun</em>. Your first newsletter will arrive soon.<div>').fadeIn(800);
									});
							});
			}

		</script>

		<script>
			function getUrlCode() {
				var url_string = window.location.href;
				var url = new URL(url_string);
				var c = url.searchParams.get('promotion\_key');
				if (typeof c !== 'undefined' && c !== null) {
					setCookie("promotion_code",c);
				}
			}

			function setCookie(cname, cvalue) {
				document.cookie = cname + "=" + cvalue + ";" + "path=/";
			}

			function getCookie(cname) {
				var name = cname + "=";
				var decodedCookie = decodeURIComponent(document.cookie);
				var ca = decodedCookie.split(';');
				for(var i = 0; i <ca.length; i++) {
					var c = ca[i];
					while (c.charAt(0) == ' ') {
						c = c.substring(1);
					}
					if (c.indexOf(name) == 0) {
						return c.substring(name.length, c.length);
					}
				}
				return "";
			}
			window.addEventListener( "load", getUrlCode );
		</script>


	</body>
</html>
