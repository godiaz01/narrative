				<script>
		(function (doc) {
			var scripts = doc.getElementsByTagName('script');
			var script = scripts[scripts.length - 1];
			var xhr = new XMLHttpRequest();
			xhr.onload = function () {
				var div = doc.createElement('div');
				div.innerHTML = this.responseText;
				div.style.display = 'none';
				script.parentNode.insertBefore(div, script);
			}
			xhr.open('get', '/theme/thesun//assets/build/img/sprite/sprite.svg', true);
			xhr.send();
		})(document);



		</script>

		<script>
			// Submit function
            function recaptcha_callback() {
						var getUrl = $('.form-newsletter').data( "url-send" ),
							getName = $('input#name').val(),
							getEmail = $('input#email').val();
						$.ajax({
								type: "POST",
								url: getUrl,
								data: {
									name: getName,
									email: getEmail,
									grecaptcharesponse: grecaptcha.getResponse()
								}
							}).done(function(response) {
								console.log(response);
									$('.form-fields').fadeOut(800, function () {
										$('.form-fields').empty().append('<div class="newsletter-confirm-message">Thank you for signing up to receive news from <em>The Sun</em>. Your first newsletter will arrive soon.<div>').fadeIn(800);
									});
							});
			}

		</script>

		<script>
			function getUrlCode() {
				var url_string = window.location.href;
				var url = new URL(url_string);
				var c = url.searchParams.get('promotion\_key');
				if (typeof c !== 'undefined' && c !== null) {
					setCookie("promotion_code",c);
				}
			}

			function setCookie(cname, cvalue) {
				document.cookie = cname + "=" + cvalue + ";" + "path=/";
			}

			function getCookie(cname) {
				var name = cname + "=";
				var decodedCookie = decodeURIComponent(document.cookie);
				var ca = decodedCookie.split(';');
				for(var i = 0; i <ca.length; i++) {
					var c = ca[i];
					while (c.charAt(0) == ' ') {
						c = c.substring(1);
					}
					if (c.indexOf(name) == 0) {
						return c.substring(name.length, c.length);
					}
				}
				return "";
			}
			window.addEventListener( "load", getUrlCode );
		</script>


